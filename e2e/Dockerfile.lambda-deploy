FROM alpine:latest

# Install necessary packages
RUN apk add --no-cache \
    python3 \
    py3-pip \
    nodejs \
    npm \
    curl \
    zip \
    bash

# Install AWS CLI and awslocal
RUN pip3 install --break-system-packages awscli awscli-local

# Set working directory
WORKDIR /opt/code

# Default command
CMD ["sh"]